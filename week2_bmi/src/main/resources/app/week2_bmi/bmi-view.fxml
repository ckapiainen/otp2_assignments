<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.week2_bmi.BMIController">

    <Label fx:id="lblWeight" text="Weight (kg):"/>
    <TextField fx:id="txtWeight" promptText="Enter weight" />

    <Label fx:id="lblHeight" text="Height (cm):"/>
    <TextField fx:id="txtHeight" promptText="Enter height"/>

    <Button fx:id="btnCalculate" text="Calculate BMI" onAction="#onCalculateClick"
            prefWidth="150.0" />
    <Label fx:id="lblResult"/>
    <Label fx:id="lblLocalTime"/>

    <Button text="EN" onAction="#onENClick" prefWidth="60.0"/>
    <Button text="FR" onAction="#onFRClick" prefWidth="60.0"/>
    <Button text="VI" onAction="#onVIClick" prefWidth="60.0"/>
    <Button text="UR" onAction="#onURClick" prefWidth="60.0"/>
</VBox>
